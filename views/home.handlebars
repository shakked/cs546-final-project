<style type="text/css">
	h1 {
		font-weight: bold;
	}
	.container-fluid {
		align-items: flex-start;
		display: flex;
		justify-content: flex-start;
		padding: 0;
	}
	#map {
		border-radius: 0 8px 8px 0;
		height: 85vh;
		width: 40%;
	}
	#venues {
		padding: 0 40px;
	}
	ul {
		list-style-type: none;
		padding: 0;
	}
	ul li {
		margin: 20px 0;
	}
	ul li label {
		border-radius: 8px;
