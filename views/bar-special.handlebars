<h1>Bar Special</h1>
<p>Bar Special ID: {{barSpecial._id}}</p>
<p>When: {{barSpecial.when}}</p>
<p>Description: {{barSpecial.description}}</p>

{{#if user}}
{{!-- (user, barSpecial, score, explanation) --}}
<div class="container col-sm-4 col-sm-offset-4">
    <h1>Add Review</h1> 
    <form action="/bars/{{barSpecial.bar}}/specials/{{barSpecial._id}}/add-review" method="POST">
        <div class="form-group">
            <label for="score">Score:</label>
            <input type="number" name="score" min="0" max="10" class="form-control" id="name" placeholder="Enter a value between 0 and 10">
        </div>

        <div class="form-group">
            <label for="description">Explanation</label>
            <input type="text" name="explanation" class="form-control" id="explanation" placeholder="Explain your score.">
        </div>
        
        <input type="hidden" name="author" value="{{user.displayName}}">
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{{/if}}

{{#each barSpecialReviews}}
<p>------------------------------------------</p>
<p>Bar Special Review ID: {{this._id}}</p>
<p>Author: {{this.author}}</p>
<p>Score: {{this.score}}</p>
<p>Explanation: {{this.explanation}}</p>

{{/each}}